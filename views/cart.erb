<h1>Hello!</h1>

<%= @items.inspect %>

<table class="table">
  <thead class="thead-inverse">
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Price</th>
      <!-- quantity -->
      <th>Qty</th>
    </tr>
  </thead>
  <%= total_price = 0 %>
  <%= total_qty = 0 %>

  <% @items.each do |item| %>
  <tbody>
    <tr>
      <td><%= item[0].id %></td>
      <td><%= item[0].title %></td>
      <td><%= item[0].price %></td>
      <td><%= item[1] %></td>
    </tr>
    <% total_price += item[0].price %>
    <% total_qty += item[1].to_i %>
  <% end %>
  <tr>
    <td></td>
    <td></td>
    <td>Total price: <%= total_price * total_qty %></td>
    <td>total quantity: <%= total_qty %></td>
  </tr>
  </tbody>
</table>
