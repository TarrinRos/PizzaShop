<h1>Hello!</h1>

<div id="cart">
  <table class="table">
    <thead class="thead-inverse">
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Price</th>
        <!-- quantity -->
        <th>Qty</th>
      </tr>
    </thead>
    <%= total_price = 0 %>
    <%= total_qty = 0 %>

    <% @items.each do |item| %>
    <tbody>
      <tr>
        <td><%= item[0].id %></td>
        <td><%= item[0].title %></td>
        <td><%= item[0].price %></td>
        <td><%= item[1] %></td>
      </tr>
      <% total_price += item[0].price * item[1].to_i %>
      <% total_qty += item[1].to_i %>
    <% end %>
    <tr>
      <td></td>
      <td></td>
      <td>Total price: <%= total_price %></td>
      <td>total quantity: <%= total_qty %></td>
    </tr>
    </tbody>
  </table>

  <form action="/place_order" method="POST" role="form">

    <input name="order[orders_input]" type="hidden" value="<%= @orders_input %>">

    <div class="form-group">
      <label>First name and Last name: </label>
      <input name="order[name]" type="text" class="form-control" placeholder="Please, anter your first name and last name">
    </div>

    <div class="form-group">
      <label>Phone:</label>
      <input name="order[phone]" type="text" class="form-control" placeholder="Please, enter your phone number">
    </div>

    <div class="form-group">
      <label>Adress:</label>
      <textarea name="order[adress]" class="form-control" placeholder="Please, enter your adress"></textarea>
    </div>
    <button type="submit" class="btn btn-warning">Place order</button>
    <button class="btn btn-danger" onclick="return cancel_order()">Cancel</button>
  </form>
</div>
